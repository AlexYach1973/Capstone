<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context=".Observe">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewObserve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/styleTextObserve"
            android:text="@string/hello_Observe" />

        <ImageButton
            android:id="@+id/buttonImageEyeEye"
            style="@style/styleButtonDataBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@color/purple_200"
            android:src="@drawable/eye_100_eye1"
            android:text="@string/button2_Observe"
            tools:ignore="ContentDescription,RelativeOverlap" />

        <ImageButton
            android:id="@+id/buttonImageEye"
            style="@style/styleButtonDataBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@color/prpr"
            android:src="@drawable/eye_100_background1"
            android:text="@string/button2_Observe"
            tools:ignore="ContentDescription,RelativeOverlap" />

        </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewObserve"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/button_margin_data_base"
        android:scrollbars="vertical"
        />

</LinearLayout>